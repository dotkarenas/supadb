{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["metadata", "members"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["job", "group"],
      "properties": {
        "job": {
          "type": "string"
        },
        "group": {
          "type": "string"
        },
        "options": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          }
        },
        "source": {
          "type": ["string", "null"]
        }
      }
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "youtube_id"],
        "properties": {
          "name": {
            "type": "string"
          },
          "youtube_id": {
            "type": "string",
            "pattern": "^(UC[a-zA-Z0-9_-]{22}|@[a-zA-Z0-9_-]+)?$"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "default": "active"
          },
          "options": {
            "type": ["array", "null"],
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
